<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blogpost:</h3>

        <form class="form new-blogpost-form">
            <div class="form-group">
                <label for="blog-title">blog title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title"/>
            </div>
            <div class="form-group">
                <label for="blog-content">content:</label>
                <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if blogposts.length}}
    <div class="col-md-6 blogpost-list">
        <h3>My Blogs:</h3>

        {{#each blogposts as |blogpost|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blogs/{{blogpost.id}}">{{blogpost.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger delete-button" data-id="{{blogpost.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js"></script>